{% extends 'base.html.twig' %}

{% block title product.name %}

{% block body %}
    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
        <div class="col-md-5 p-lg-5 mx-auto my-5">
            <h1 class="display-4 font-weight-normal">{{ product.name }}</h1>
            <p class="lead font-weight-normal">{{ product.description|nl2br }}</p>
            <div class="btn-toolbar mb-3" role="toolbar">
                <div class="input-group w-50 mr-2">
                    <div class="input-group-prepend">
                        <button class="btn btn-outline-secondary" type="button">+</button>
                    </div>
                    <input type="text" class="form-control" value="1" placeholder="{{ 'quantity'|trans }}">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">-</button>
                    </div>
                </div>
                <div class="btn-group" role="group">
                    <button class="btn btn-primary" type="button">{{ 'add.to.cart'|trans }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
