{% extends 'base.html.twig' %}

{% block title product.name %}

{% block body %}
    <div id="product-view" class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center">
        <div class="col-md-5 p-lg-5 mx-auto">
            <img class="img-fluid img-thumbnail" alt="{{ product.name }}" src="{{ product.picture }}">
            <h1 class="display-4 font-weight-normal">{{ product.name }}</h1>
            <p class="lead font-weight-normal">{{ product.description|nl2br }}</p>
            <div class="btn-toolbar mb-3" role="toolbar">
                <div class="input-group w-50 mr-2">
                    <div class="input-group-prepend">
                        <button class="btn btn-outline-secondary" type="button" @click="addQuantity(-1)">-</button>
                    </div>
                    <input type="text" class="form-control" v-model="quantity" placeholder="{{ 'quantity'|trans }}">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" @click="addQuantity(1)">+</button>
                    </div>
                </div>
                <div class="btn-group" role="group">
                    <button class="btn btn-primary" type="button" @click="addToCart({{ product.id }})">{{ 'add.to.cart'|trans }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
